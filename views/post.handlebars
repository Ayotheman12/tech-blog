<div class="post" data-post-id="{{post.id}}">
    <header>
        <h2>{{post.title}}</h2>
        <p>Posted by {{post.user.username}} on {{formatDate post.date_created}}</p>
    </header>
    <p>{{post.content}}</p>
</div>

{{#each comments as |comment|}}
<div>
    <p>{{comment.content}}</p>
    <p>-{{post.user.username}}, {{formatDate comment.date_created}}</p>
</div>
{{/each}}

<button id="new-comment-button">Add New Comment</button>

<div id="new-comment-editor">
    <form id="new-comment-form">
        <label for="comment-input">Comment</label>
        <input type="text" id="comment-input" />
        <button type="submit">Add Comment</button>
    </form>
</div>

<script src="/js/comment.js"></script>